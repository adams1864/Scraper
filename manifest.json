{
  "manifest_version": 3,
  "name": "Upwork Job Scraper",
  "version": "1.0",
  "description": "Scrapes data from Upwork job pages when applying.",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.upwork.com/nx/proposals/job/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.upwork.com/nx/proposals/job/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {}
}